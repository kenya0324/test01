<div class="container clearfix">
	<div class="modal-dialog" role="document">
		<div class="post_index_m modal-content">

			<%= form_for @post,url:posts_path, remote: true do |f| %>

				<div class="modal-header">
	                <h4 class="modal-title">投稿</h4><br>
	                <div id="post_create_error_messages">
		                
		            </div>
	                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	                   <span aria-hidden="true">&times;</span>
	                </button>
	            </div>

	            <div class="modal-body">
						<div class="post_new_content">
							<p>説明文</p>
						    <%= f.text_area :post_content, class:"form-control" %>
						</div>
						<div class="post_new_category">
							<p>カテゴリー選択</p>
					     
					    </div>
						    
				</div>

				<div class="modal-footer actions">
					<div class="post_new_image">
					    <%= f.submit "Post" ,class:"btn btn-primary"%>
					</div>
				</div>

			<% end %>

		</div>
	</div>
</div>