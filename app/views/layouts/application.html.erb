<!DOCTYPE html>
<html>
  <head>
    <title>Test01</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/65370e92be.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
      <header class="header_all">
        <nav class="navbar navbar-expand-lg navbar-dark bg-white">
          <div class="container-fluid clearfix">

              <div class="nav_title">
                  <h3>Enちゃんねる</h3>
              </div>

              <div class="nav_post_search">
                      <%= form_tag(search_path,:method => 'get') do %>
                          <%= text_field_tag :search, "",placeholder:"検索" %>
                          <button type="submit" class="search_button"  id="search_button_link"><i class="fas fa-search"></i></button>
                      <% end %>
              </div>

          </div>
        </nav>
      </header>

      <%= yield %>

      <footer class="footer_all">
        <div class="footer_name">enchan</div>
      </footer>
    </div>
  </body>
</html>
