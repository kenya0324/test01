<!DOCTYPE html>
<html>
  <head>
    <title>Test01</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/65370e92be.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
      <header class="header_all">
        <nav class="navbar navbar-expand-lg navbar-dark bg-white">
          <div class="container-fluid clearfix">

              <div class="nav_title">
                  <h3>Enちゃんねる</h3>
              </div>

              <div class="nav_post_search">
                      <%= form_tag(search_path, :method=>'get')do %>
                          <%=select_tag(:option,options_for_select([["スレッド","1"],["レス","2"]]))%>
                          <%= text_field_tag :search %>
                          <button type="submit" class="search_button"  id="search_button_link"><i class="fas fa-search"></i></button>
                      <% end %>
              </div>

              <div class="nav_home_bar">
                <ul class="navbar-nav">
                  <% if user_signed_in? %>
                    <li class="nav-item">
                      <%= link_to 'トップ',root_path, class:"btn btn-default rounded-pill nav_root_button" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'ログアウト',destroy_user_session_path, method: :delete, class:"btn btn-default rounded-pill nav_destroysession_button" %>
                    </li>
                  <% else %>
                    <li class="nav-item">
                      <%= link_to 'トップ',root_path, class:"btn btn-default rounded-pill nav_root_button" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'ログイン',new_user_session_path, class:"btn btn-default rounded-pill nav_session_button" %>
                    <li class="nav-item">
                      <%= link_to 'サインイン',new_user_registration_path, class:"btn btn-default rounded-pill nav_registration_button" %>
                    </li>
                  <% end %>
                </ul>
              </div>

          </div>
        </nav>
      </header>

      <%= yield %>

      <footer class="footer_all">
        <div class="footer_name">enchan</div>
      </footer>
    </div>
  </body>
</html>
