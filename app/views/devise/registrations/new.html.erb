<div class="container clearfix">
  <div class ="registration_location">
    <div class ="registration_all">
      <h3>サインイン</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field name_field">
          <%= f.text_field :name,placeholder:"ニックネーム" %>
        </div><br>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス" %>
        </div><br>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワード" %>
        </div><br>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード確認" %>
        </div>

        <div class="actions signin_button">
          <%= f.submit "サインイン", class:"signin_button_link" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
