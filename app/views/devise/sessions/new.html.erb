<div class="container clearfix">
  <div class ="session_location">
    <div class ="session_all">
      <h3>ログイン</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field email_field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス" %>
        </div><br>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password",placeholder:"" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions login_button">
          <%= f.submit "ログイン", class:"login_button_link" %>
        </div>
      <% end %>

      <div class="devise_shared_links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>